// Prisma schema for Crosswit: NextAuth + game scores
// https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth.js required models (https://next-auth.js.org/adapters/prisma)
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  hashedPassword String?  // for credentials provider
  accounts      Account[]
  sessions      Session[]
  gameScores    GameScore[]
  gameRuns      GameRun[]
}

// Game score: one row per completed level (or per game session, your choice)
model GameScore {
  id        String   @id @default(cuid())
  userId    String
  level     Int
  score     Int      // wordsFound + timeLeft (or your formula)
  timeLeft  Int      // seconds remaining
  wordsFound Int
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([score])
}

// One play session: saved when user fails or quits. Used for run leaderboards (highest level, fastest time).
model GameRun {
  id                   String   @id @default(cuid())
  userId               String
  levelReached         Int      // highest level completed in this run (1-based)
  totalScore           Int      // sum of level scores for completed levels
  totalTimeSpentSeconds Int     // time from session start until run ended
  endedBy              String   // "failed" | "quit"
  createdAt            DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([levelReached, totalTimeSpentSeconds])
}
